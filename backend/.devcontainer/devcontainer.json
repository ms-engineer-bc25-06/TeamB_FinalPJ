{
  "name": "TeamB Backend DevContainer",
  // backend + db を同時に起動
  "dockerComposeFile": ["../compose.yaml"],
  // VSCodeが接続するサービス（backendコンテナ）
  "service": "backend",
  // VSCodeが開くワークスペースフォルダ（backendディレクトリ）
  "workspaceFolder": "/workspace/backend",

  // VS Codeのカスタマイズ設定
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        }
      }
    }
  },

  // コンテナ初回起動後に開発用パッケージをインストール
  "postCreateCommand": "pip install -r /workspace/backend/requirements-dev.txt",

  // Python モジュール解決のためのパス設定
  "remoteEnv": {
    "PYTHONPATH": "/workspace/backend"
  }
}
